<?xml version="1.0" encoding="UTF-8"?>
<xs:schema  xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="Armylist">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Themeforce" minOccurs="0">
                    <xs:complexType>
                        <xs:attribute name="tier" type="xs:string"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="Army">
                    <xs:complexType>
                        <xs:choice minOccurs="1" maxOccurs="unbounded">
                            <xs:element name="Caster" type="CasterType"/>
                            <xs:element name="Models" type="ModelList" maxOccurs="1"/>   
                        </xs:choice>
                    </xs:complexType>
                </xs:element>                    
            </xs:sequence>
            <xs:attribute name="faction" type="xs:string"/>
            <xs:attribute name="description" type="xs:string"/>
            <xs:attribute name="player" type="xs:string"/>
        </xs:complexType>
    </xs:element>

    <xs:attributeGroup name="ModelUnitAttr">
        <xs:attribute name="Name" type="xs:string"/>
        <xs:attribute name="PointCost" type="xs:integer"/>
    </xs:attributeGroup>

    <xs:complexType name="ModelUnit">
        <xs:attributeGroup ref="ModelUnitAttr"/>
    </xs:complexType>

<xs:complexType name="CasterType">
    <xs:complexContent>
        <xs:extension base="ModelUnit">
            <xs:sequence minOccurs="1" maxOccurs="1">
                <xs:element name="battlegroup" type="ModelList"/>
            </xs:sequence> 
            <xs:attribute name="focusfury" type="xs:integer"/>
        </xs:extension>
    </xs:complexContent>
 </xs:complexType>
 
  <xs:complexType name="UnitType">
    <xs:complexContent>
        <xs:extension base="ModelUnit">
            <xs:attribute name="MinMax" default="Max" type="MinMaxType"/>
        </xs:extension>
    </xs:complexContent>
  </xs:complexType>

<xs:complexType name="ModelList">
    <xs:choice minOccurs="1" maxOccurs="unbounded">
        <xs:element name="Unit" type="UnitType"/>
        <xs:element name="Solo" type="ModelUnit"/>
    </xs:choice>
</xs:complexType>

<xs:simpleType name="MinMaxType">
    <xs:restriction base="xs:string">
        <xs:enumeration value="Min"/>
        <xs:enumeration value="Max"/>
    </xs:restriction>
</xs:simpleType>

