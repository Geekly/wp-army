<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">    
    <xs:element name="armylist">
        <xs:complexType>
            <xs:all> 
                <xs:element name="faction" type="xs:string"/>
                <xs:element name="description" type="xs:string"/>
                <xs:element name="player" type="xs:string"/>        
                <xs:element name="army">
                    <xs:complexType>
                        <xs:all>    
                            <xs:element name="themeforce" type="xs:string"/>
                            <xs:element name="tier" type="xs:string"/>
                            <xs:element name="caster">
                                <xs:complexType>
                                    <xs:all>
                                        <xs:element name="name" type="xs:string"/>
                                        <xs:element name="points" type="xs:integer"/>
                                        <xs:element name="focusfury" type="xs:integer"/>                       
                                    </xs:all>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="models">
                                <xs:complexType>
                                    <xs:choice minOccurs="0" maxOccurs="unbounded">
                                        <xs:element name="caster" nillable="false">
                                            <xs:complexType>
                                                <xs:all>
                                                    <xs:element name="name" type="xs:string"/>
                                                    <xs:element name="points" type="xs:integer"/>
                                                    <xs:element name="focusfury" type="xs:integer"/>                       
                                                </xs:all>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="unit" nillable="true">
                                            <xs:complexType>
                                                <xs:all>
                                                    <xs:element name="name" type="xs:string"/>
                                                    <xs:element name="pointcost" type="xs:integer"/>
                                                    <xs:element name="minmax" type="xs:string"/>
                                                </xs:all>
                                            </xs:complexType>
                                        </xs:element>                               
                                        <xs:element name="solo" maxOccurs="unbounded" nillable="true">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="name" type="xs:string"/>
                                                    <xs:element name="pointcost" type="xs:integer"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:choice>
                                </xs:complexType>
                            </xs:element>
                        </xs:all>
                    </xs:complexType>
                </xs:element>    
            </xs:all>
        </xs:complexType>
    </xs:element>
